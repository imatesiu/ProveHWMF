<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/card_viewinternal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            card_view:cardCornerRadius="4dp"

            card_view:cardBackgroundColor="@android:color/holo_orange_light"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="20sp"
                android:id="@+id/classecard"
                android:layout_gravity="center|right"
                android:gravity="center|right"

                android:src="@drawable/ic_cash_register"
                android:layout_alignParentTop="true"
                android:layout_marginRight="1dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="LOGO"
                android:elegantTextHeight="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:text="Numero Rapporto Prova:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/card_viewinternal1"
            android:textStyle="normal|bold"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/overflowMF"
            android:layout_gravity="top|right"
            android:layout_width="@dimen/ic_overflow_width"
            android:layout_height="@dimen/ic_overflow_height"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_dots"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Stato Prove: In Corso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_below="@+id/textView11"
            android:layout_toEndOf="@+id/card_viewinternal1"
            android:textStyle="normal|bold" />

        <TextView
            android:text="1255555222222255"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:layout_below="@+id/textView9"
            android:layout_toEndOf="@+id/card_viewinternal1"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Data: 12/12/2016 12:15:16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/textView177"
            android:layout_below="@+id/textView12"
            android:layout_toEndOf="@+id/card_viewinternal1" />

        <TextView
            android:text="Modello: TIPO C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textSize="18sp"
            android:layout_below="@+id/textView18"
            android:layout_toEndOf="@+id/card_viewinternal1" />
    </RelativeLayout>

</android.support.v7.widget.CardView>


