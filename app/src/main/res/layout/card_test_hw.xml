<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_viewTestHW"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        >
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_viewinternalCT1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            card_view:cardCornerRadius="4dp"

            card_view:cardBackgroundColor="@android:color/holo_blue_light"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="20sp"
                android:id="@+id/classecard"
                android:layout_gravity="center|right"
                android:gravity="center|right"


                android:layout_alignParentTop="true"
                android:layout_marginRight="1dp"
                android:textAlignment="center"
                android:textStyle="bold"

                android:elegantTextHeight="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_content_paste" />
        </android.support.v7.widget.CardView>

        <TextView
            android:text="Prova: Alimentazione senza\n Vincolo Fiscale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView101"
            android:layout_toEndOf="@+id/card_viewinternalCT1"
            android:layout_alignParentTop="true"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/overflowTHW"
            android:layout_gravity="top|right"
            android:layout_width="@dimen/ic_overflow_width"
            android:layout_height="@dimen/ic_overflow_height"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_dots"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Stato Prove: Positivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView121"
            android:layout_below="@+id/textView101"
            android:layout_toEndOf="@+id/card_viewinternalCT1"
            android:textStyle="normal|bold" />

        <TextView
            android:text="NumRapProva: 1255998-552"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView91"
            android:textSize="10sp"
            android:layout_below="@+id/textView121"
            android:layout_toEndOf="@+id/card_viewinternalCT1" />

        <TextView
            android:text="Modello: TIPO C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView111"
            android:textSize="10sp"
            android:layout_below="@+id/textView91"
            android:layout_toEndOf="@+id/card_viewinternalCT1" />

        <TextView
            android:text="Data: 12/12/2016 12:15:16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:id="@+id/textView17"
            android:layout_below="@+id/textView111"
            android:layout_toEndOf="@+id/card_viewinternalCT1" />

    </RelativeLayout>

</android.support.v7.widget.CardView>


