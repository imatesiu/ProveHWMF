<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_viewTestHW"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_viewinternalCT1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_alignParentTop="true"
            card_view:cardCornerRadius="4dp"

            card_view:cardBackgroundColor="@android:color/holo_red_light"
            android:layout_margin="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/classecard"
                android:layout_gravity="center|right"
                android:gravity="center|right"


                android:layout_alignParentTop="true"
                android:layout_marginRight="1dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="TEST\nHW"
                android:elegantTextHeight="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:text="Modello:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/textView9"
            android:layout_toEndOf="@+id/card_viewinternal1" />

        <TextView
            android:text="Stato Prove:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_below="@+id/textView10"
            android:layout_toEndOf="@+id/card_viewinternal1"
            android:layout_marginTop="19dp" />

        <TextView
            android:text="Prova"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_alignTop="@+id/card_viewinternal1"
            android:layout_toEndOf="@+id/card_viewinternal1" />

        <TextView
            android:text="Matricola Fiscale:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView12"
            android:layout_toEndOf="@+id/card_viewinternal1"
            android:layout_marginTop="16dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>


