<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_viewTestHW"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_viewinternalCT1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            card_view:cardCornerRadius="4dp"

            card_view:cardBackgroundColor="@android:color/holo_red_light"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/classecard"
                android:layout_gravity="center|right"
                android:gravity="center|right"


                android:layout_alignParentTop="true"
                android:layout_marginRight="1dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="TEST\nHW"
                android:elegantTextHeight="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:text="Prova"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView101"
            android:layout_toEndOf="@+id/card_viewinternalCT1"
            android:layout_alignParentTop="true" />

        <TextView
            android:text="Stato Prove:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView121"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView101"
            android:layout_toEndOf="@+id/card_viewinternalCT1" />

        <TextView
            android:text="Matricola Fiscale:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView91"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/textView121"
            android:layout_toEndOf="@+id/card_viewinternalCT1" />

        <TextView
            android:text="Modello:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView111"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/textView91"
            android:layout_toEndOf="@+id/card_viewinternalCT1" />


        <ImageView
            android:id="@+id/overflowTHW"
            android:layout_gravity="top|right"
            android:layout_width="@dimen/ic_overflow_width"
            android:layout_height="@dimen/ic_overflow_height"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_dots"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>


