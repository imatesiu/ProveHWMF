<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_allegato"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="it.isti.sse.provehwmf.AllegatoActivity"
    tools:showIn="@layout/activity_allegato">

    <TextView
        android:text="Matricola MF:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="13dp"

        android:id="@+id/textView15" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/spinner3"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView15"
        android:layout_marginLeft="10dp" />

    <TextView
        android:text="Tipo Prova:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner3"
        android:layout_alignStart="@+id/textView15"
        android:layout_marginTop="25dp"

        android:id="@+id/textView16" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView16"

        android:entries="@array/list_prove_hw_search"
        android:id="@+id/spinner4"
        android:layout_toEndOf="@+id/textView15"
        android:layout_marginLeft="10dp" />

    <TextView
        android:text="Modello:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner4"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginTop="25dp"
        android:id="@+id/textView19" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView19"
        android:layout_toEndOf="@+id/textView15"
        android:id="@+id/spinner6"
        android:layout_alignStart="@+id/spinner4" />
</RelativeLayout>
